<script>
// Auto theme mengikuti system Android / OS
const toggle=document.getElementById('themeToggle');
const body=document.body;
const prefersDark = window.matchMedia('(prefers-color-scheme: dark)');

function applyTheme(theme){
  body.classList.toggle('light', theme==='light');
  toggle.textContent = theme==='light' ? 'â˜€ï¸' : 'ðŸŒ™';
}

// Prioritas: localStorage â†’ system theme
const savedTheme = localStorage.theme;
if(savedTheme){
  applyTheme(savedTheme);
}else{
  applyTheme(prefersDark.matches ? 'dark' : 'light');
}

// Listen perubahan system theme
prefersDark.addEventListener('change', e=>{
  if(!localStorage.theme){
    applyTheme(e.matches ? 'dark' : 'light');
  }
});

// Manual toggle
toggle.onclick=()=>{
  const isLight = body.classList.toggle('light');
  const theme = isLight ? 'light' : 'dark';
  toggle.textContent = isLight ? 'â˜€ï¸' : 'ðŸŒ™';
  localStorage.theme = theme;
};


// Filter kategori
const filters = document.querySelectorAll('.filter');
const posts = document.querySelectorAll('.post');
filters.forEach(btn=>{
  btn.onclick=()=>{
    filters.forEach(b=>b.classList.remove('active'));
    btn.classList.add('active');
    const f = btn.dataset.filter;
    posts.forEach(p=>{
      p.style.display = (f==='all'||p.classList.contains(f))?'block':'none';
    });
  }
});
filters[0].classList.add('active');

// Auto default image per kategori
posts.forEach(p=>{
  const img = p.querySelector('img');
  img.onerror = ()=>{
    if(p.classList.contains('web')) img.src='https://images.unsplash.com/photo-1498050108023-c5249f4df085?auto=format&fit=crop&w=800&q=60';
    if(p.classList.contains('javascript')) img.src='https://images.unsplash.com/photo-1555066931-4365d14bab8c?auto=format&fit=crop&w=800&q=60';
    if(p.classList.contains('backend')) img.src='https://images.unsplash.com/photo-1555949963-aa79dcee981c?auto=format&fit=crop&w=800&q=60';
  }
});
</script>

